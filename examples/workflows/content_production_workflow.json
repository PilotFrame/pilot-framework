  "execution_spec": {
    "description": "Sequential creation of research → schedule → draft → technical review, followed by parallel SEO validation and frontend integration. The cycle repeats until all content scores ≥0.9 before Final Reviewer approval and publication.",
    "flow_pattern": "mixed",
    "parallel_details": {
      "parallel_steps": [
        "seo_validation",
        "update_templates_build"
      ],
      "merge_strategy": "all"
    },
    "cycle_details": {
      "cycle_steps": [
        "review_technical_accuracy",
        "seo_validation",
        "update_templates_build"
      ],
      "exit_condition": "technical_review_report.overall_score >= 0.9 AND seo_report.lighthouse_seo_score >= 0.9 AND codebase_manifest.confidence_score >= 0.9",
      "max_iterations": 5
    },
    "conditional_branches": [
      {
        "condition": "research_topics.confidence_score < 0.9",
        "target_step": "research_trending_topics",
        "description": "Re-run research phase if new trends or insufficient confidence."
      },
      {
        "condition": "technical_review_report.overall_score < 0.9",
        "target_step": "review_technical_accuracy",
        "description": "Re-run technical validation until errors resolved."
      },
      {
        "condition": "seo_report.lighthouse_seo_score < 0.9",
        "target_step": "seo_validation",
        "description": "Repeat SEO validation until schema and keywords correct."
      }
    ],
    "execution_guidance": "1) Research Analyst discovers trending topics → 2) Content Editor plans calendar → 3) Writer drafts MDX → 4) Technical Reviewer validates code → 5) SEO Strategist checks meta/schema → 6) Frontend Developer integrates pages → 7) Final Reviewer approves for publication. Repeat cycle until all gates pass."
  },
