{
  "id": "blog_post_creation",
  "name": "Blog Post Creation Workflow",
  "steps": [
    { "id": "positioning_frame", "persona_id": "positioning_framer", "order": 1, "label": "Positioning Frame" },
    { "id": "collect_requirements", "persona_id": "requirements_collector", "order": 2, "label": "Collect Requirements" },
    { "id": "gap_interview", "persona_id": "gap_interviewer", "order": 3, "label": "Resolve Gaps" },
    { "id": "how_it_works", "persona_id": "architecture_explainer", "order": 4, "label": "Author How It Works" },
    { "id": "write_content", "persona_id": "content_writer", "order": 5, "label": "Write Content" },
    { "id": "faq_comparison", "persona_id": "faq_and_comparison_builder", "order": 6, "label": "Add FAQ & Comparison" },
    { "id": "terminology_lint", "persona_id": "terminology_linter", "order": 7, "label": "Terminology & Tone Lint" },
    { "id": "seo_review", "persona_id": "seo_reviewer", "order": 8, "label": "SEO Review" },
    { "id": "accuracy_review", "persona_id": "accuracy_reviewer", "order": 9, "label": "Accuracy Review" },
    { "id": "final_review", "persona_id": "final_reviewer", "order": 10, "label": "Final Review" }
  ],
  "execution_spec": {
    "description": "Refinement cycles ensure gaps are closed, 'How it Works' is present, tone is correct, and SEO/Accuracy thresholds pass before final approval.",
    "flow_pattern": "mixed",
    "cycle_details": {
      "cycle_steps": ["write_content", "faq_comparison", "terminology_lint", "seo_review", "accuracy_review"],
      "exit_condition": "lint_pass == true AND seo_score >= 0.8 AND accuracy_score >= 0.8 AND howitworks_complete == true AND gaps_resolved == true",
      "max_iterations": 6
    },
    "preconditions": [
      { "condition": "brief_completeness >= 0.8", "on_fail": "gap_interview" },
      { "condition": "how_it_works_present == true", "on_fail": "how_it_works" }
    ],
    "conditional_branches": [
      { "condition": "lint_pass == false", "target_step": "terminology_lint" },
      { "condition": "seo_score < 0.8", "target_step": "write_content" },
      { "condition": "accuracy_score < 0.8", "target_step": "write_content" },
      { "condition": "gaps_resolved == false", "target_step": "gap_interview" }
    ],
    "execution_guidance": "1) Collect requirements → 2) Resolve gaps → 3) Author 'How it Works' → 4) Write content → 5) Add FAQ/Comparison → 6) Lint tone/terminology → 7) SEO → 8) Accuracy → cycle until gates pass → 9) Final Review. Agents should call persona.{id}.get_specification before each step."
  },
  "metadata": {
    "description": "Spec-led blog workflow with gap interrogation, architecture explanation, tone/terminology linting, and quality gates.",
